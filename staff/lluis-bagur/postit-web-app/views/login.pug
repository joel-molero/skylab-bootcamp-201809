extends layout
block content
    div(class='login')
      form(class='login__form' action='/login', method='POST')
        input(class='login__inputs', type='text', name='username', placeholder='username')
        input(class='login__inputs', type='password', name='password', placeholder='password')
        button(type='submit') Login
      if error
        p(class='error') #{error}
      a(href='/') go back